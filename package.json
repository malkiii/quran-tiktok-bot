{
  "private": false,
  "type": "module",
  "scripts": {
    "dev": "nodemon -x tsx src --watch . --ext js,ejs,ts,tsx,json",
    "start": "cross-env NODE_ENV=production tsx src/index.ts",
    "lint": "tsc --noEmit && eslint src",
    "remotion:init": "remotion browser ensure",
    "remotion:studio": "remotion studio",
    "remotion:render": "remotion render"
  },
  "dependencies": {
    "ejs": "^3.1.10",
    "express": "^4.18.2",
    "express-ejs-layouts": "^2.5.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/express-ejs-layouts": "^2.5.4",
    "@types/node": "^20.5.6",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.48.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.3.3",
    "tsx": "^4.19.0",
    "typescript": "^5.2.2"
  },
  "prettier": {
    "semi": true,
    "tabWidth": 2,
    "printWidth": 100,
    "singleQuote": true,
    "arrowParens": "avoid",
    "trailingComma": "all",
    "quoteProps": "preserve"
  },
  "engines": {
    "node": "20.x"
  },
  "packageManager": "pnpm@9.9.0"
}
